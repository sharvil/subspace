style "notebook" {
 xthickness = 4
 ythickness = 4
	engine "pixmap" {
		# NOTEBOOK TABS
		# FIXME: Do left and right tabs as well
		# TOP
		# top background tabs
		image {
			function = EXTENSION
			state = ACTIVE
			gap_side = BOTTOM
			file = "tab_top_inactive.png"
			border = {10,10,9,9}
			stretch = TRUE
		}
		# top foreground tab
		image {
			function = EXTENSION
			gap_side = BOTTOM
			file = "tab_top_active.png"
			border = {10,10,9,9}
			stretch = TRUE
		}

#BOTTOM
image {
			function = EXTENSION
			state = ACTIVE
			gap_side = TOP
			file = "new_tab_bottom_inactive.png"
			border = {10,10,9,9}
			stretch = TRUE
		}
		# top foreground tab
		image {
			function = EXTENSION
			gap_side = TOP
			file = "new_tab_bottom_active.png"
			border = {10,10,9,9}
			stretch = TRUE
		}
		
#LEFT
image {
			function = EXTENSION
			state = ACTIVE
			gap_side = RIGHT
			file = "new_tab_left_inactive.png"
			border = {10,10,9,9}
			stretch = TRUE
		}
		# top foreground tab
		image {
			function = EXTENSION
			gap_side = RIGHT
			file = "new_tab_left_active.png"
			border = {10,10,9,9}
			stretch = TRUE
		}
		
		
#RIGHT
image {
			function = EXTENSION
			state = ACTIVE
			gap_side = LEFT
			file = "new_tab_right_inactive.png"
			border = {10,10,9,9}
			stretch = TRUE
		}
		# top foreground tab
		image {
			function = EXTENSION
			gap_side = LEFT
			file = "new_tab_right_active.png"
			border = {10,10,9,9}
			stretch = TRUE
		}
		

		# NOTEBOOK BORDERS
		# tabs on top
		image {

			function = BOX_GAP
			gap_side = TOP
			file = "notebook_border.png"
			border = {3,3,3,3}
			stretch = TRUE
		}
		# tabs on bottom
		image {
			function = BOX_GAP
			gap_side = BOTTOM
			file = "notebook_border.png"
			border = {3,3,3,3}
			stretch = TRUE
		}
		# tabs on left
		image {
			function = BOX_GAP
			gap_side = LEFT
			file = "notebook_border.png"
			border = {3,3,3,3}
			stretch = TRUE
		}
		# tabs on right
		image {
			function = BOX_GAP
			gap_side = RIGHT
			file = "notebook_border.png"
			border = {3,3,3,3}
			stretch = TRUE
		}

#
# How to draw the box of a notebook when it isnt attached to a tab
#
   

 image
      {
 
	function        = BOX
	recolorable     = TRUE
	file            = "notebook_border.png"
	border = {3,3,3,3}
	stretch         = TRUE
	gap_side	= TOP
      }
	}

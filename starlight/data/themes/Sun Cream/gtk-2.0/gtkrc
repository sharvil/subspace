style "optionmenu" 
{
   engine "pixmap" {
       
	image {
            function        = BOX
            recolorable     = TRUE
	    state           = NORMAL
            file            = "menubar_option.png"
            border          = { 12, 23, 10, 11 }
            stretch         = TRUE
        }

        image {
            function        = TAB
            recolorable     = TRUE
            state           = NORMAL
            overlay_file    = "menubar_option_arrow.png"
            overlay_stretch = FALSE
        }

        image {
            function        = BOX
            recolorable     = TRUE
	    state           = PRELIGHT
            file            = "menubar_option_prelight.png"
            border          = { 12, 23, 10, 11 }
            stretch         = TRUE
        }

        image {
            function        = TAB
            recolorable     = TRUE
            state           = PRELIGHT
            overlay_file    = "menubar_option_arrow.png"
            overlay_stretch = FALSE
        }
        
        image {
            function        = BOX
            recolorable     = TRUE
	    state           = INSENSITIVE
            file            = "menubar_option_insensitive.png"
            border          = { 12, 23, 10, 11 }
            stretch         = TRUE
        }

        image {
            function        = TAB
            recolorable     = TRUE
            state           = INSENSITIVE
            overlay_file    = "menubar_option_arrow_insensitive.png"
            overlay_stretch = FALSE
        }
    
    }
	
}

